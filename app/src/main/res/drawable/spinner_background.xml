<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_container" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="center_vertical|end"
        android:right="12dp">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="@color/on_primary_container" />
            </shape>
        </rotate>
    </item>
</layer-list>
