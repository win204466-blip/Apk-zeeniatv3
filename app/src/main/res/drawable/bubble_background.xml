<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/bubble_gradient_start"
                android:centerColor="@color/bubble_gradient_center"
                android:endColor="@color/bubble_gradient_end" />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60%"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#50FFFFFF"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
