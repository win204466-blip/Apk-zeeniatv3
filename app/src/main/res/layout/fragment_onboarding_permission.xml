<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/secondary">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_permission"
                app:tint="@android:color/white"
                android:contentDescription="@string/permission_overlay" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_2"
            android:textSize="26sp"
            android:fontFamily="sans-serif-bold"
            android:letterSpacing="-0.02"
            android:textColor="@color/text_primary"
            android:textAlignment="center"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_desc_2"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/overlayPermissionRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/ripple_item">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/section_icon_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bubble"
                            app:tint="@color/primary"
                            android:contentDescription="Overlay" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_overlay"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tvOverlayStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_denied"
                        android:textSize="11sp"
                        android:textColor="@color/error"
                        app:chipBackgroundColor="@color/error_container"
                        app:chipMinHeight="26dp"
                        app:chipCornerRadius="8dp"
                        app:chipStrokeWidth="0dp"
                        app:ensureMinTouchTargetSize="false" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/notificationPermissionRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/ripple_item">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/section_icon_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_permission"
                            app:tint="@color/primary"
                            android:contentDescription="Notification" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_notification"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tvNotificationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_denied"
                        android:textSize="11sp"
                        android:textColor="@color/error"
                        app:chipBackgroundColor="@color/error_container"
                        app:chipMinHeight="26dp"
                        app:chipCornerRadius="8dp"
                        app:chipStrokeWidth="0dp"
                        app:ensureMinTouchTargetSize="false" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/notificationAccessRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/ripple_item">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/section_icon_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/primary"
                            android:contentDescription="Notification Access" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_notification_access"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_notification_access_desc"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tvNotificationAccessStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_denied"
                        android:textSize="11sp"
                        android:textColor="@color/error"
                        app:chipBackgroundColor="@color/error_container"
                        app:chipMinHeight="26dp"
                        app:chipCornerRadius="8dp"
                        app:chipStrokeWidth="0dp"
                        app:ensureMinTouchTargetSize="false" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnGrantPermission"
            style="@style/OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/btn_grant_permission"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnGrantNotificationAccess"
            style="@style/OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/btn_grant_notification_access"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</ScrollView>
