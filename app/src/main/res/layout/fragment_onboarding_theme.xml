<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/accent">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_theme"
                app:tint="@android:color/white"
                android:contentDescription="@string/onboarding_title_3" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_3"
            android:textSize="26sp"
            android:fontFamily="sans-serif-bold"
            android:letterSpacing="-0.02"
            android:textColor="@color/text_primary"
            android:textAlignment="center"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_desc_3"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke"
            app:cardBackgroundColor="@color/surface_color">

            <RadioGroup
                android:id="@+id/rgTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="4dp">

                <RadioButton
                    android:id="@+id/rbAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_auto"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:checked="true"
                    android:buttonTint="@color/primary"
                    android:background="@drawable/ripple_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/divider_color" />

                <RadioButton
                    android:id="@+id/rbLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_light"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:buttonTint="@color/primary"
                    android:background="@drawable/ripple_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/divider_color" />

                <RadioButton
                    android:id="@+id/rbDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_dark"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:buttonTint="@color/primary"
                    android:background="@drawable/ripple_item" />

            </RadioGroup>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
